<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <meta name="description" content="Huge amounts of games, huge amounts of e-pen">
    <meta name="author" content="Esportswatcher Crew">

    <title>EsportsWatcher Inc</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="~/css/MainStyleSheet.css" rel="stylesheet" />
    <link href="~/css/1-col-portfolio.css" rel="stylesheet" />
    <link href="~/css/JohansCSS.css" rel="stylesheet" />
    <link href="~/css/LuddesCss.css" rel="stylesheet" />

</head>

<body>

    <nav class="navbar navbar-custom navbar-fixed-top">
        <div class="container" id="navContainer">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img class="logo" src="~/img/ewatchlogotrans2.png" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul id="box" class="nav navbar-nav">
                    @if (ViewBag.active == "GameList")
                    {
                        <li class="active"><a href="#">Games</a></li>
                    }
                    else
                    {
                        <li><a href="GameList">Games</a></li>
                    }
                    <li><a href="#">Tournaments</a></li>
                    <li><a href="#">Streams</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="py-5 bg-dark" style="background-color: black">
        <div class="container-fluid">
            <p class="m-0 text-center">Copyright &copy; Esportswatcher Crew 2017</p>
        </div>
    </footer>

    <script src="https://use.fontawesome.com/527085a8f1.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>

</html>